apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  labels:
    app: csi-metrics
    release: {{ accu_monitoring_release }}
  name: accu-rook-ceph-csi
  namespace: {{ accu_monitoring_namespace }}
spec:
  endpoints:
  - path: /metrics
    port: csi-http-metrics
  namespaceSelector:
    matchNames:
    - {{ accu_rook_ceph_namespace }}
  selector:
    matchLabels:
      app: csi-metrics
