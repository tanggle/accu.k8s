---

apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: ceph-adm-ingress
  namespace: rook-ceph
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - host: {{ accu_rook_ceph_admin_fqdn }}
    http:
      paths:
      - path: /
        backend:
          serviceName: rook-ceph-mgr-dashboard
          servicePort: http-dashboard

