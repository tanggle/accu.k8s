apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: accu-nvidia-device-metric
  namespace: {{ accu_accelerator_namespace }}
  labels:
    accuinsight.io/accelerator: dcgm-exporter
spec:
  updateStrategy:
    type: RollingUpdate
  selector:
    matchLabels:
      accuinsight.io/accelerator: dcgm-exporter
  template:
    metadata:
      labels:
        accuinsight.io/accelerator: dcgm-exporter
      name: accu-nvidia-device-metric
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: node-role.kubernetes.io/accelerator
                operator: In
                values:
                - nvidia
      containers:
      - image: nvidia/dcgm-exporter:{{ accu_accelerator_device_metric_version }}
        env:
        - name: DCGM_EXPORTER_LISTEN
          value: 0.0.0.0:9400
        - name: DCGM_EXPORTER_KUBERNETES
          value: "true"
        name: dcgm-exporter
        ports:
        - name: metrics
          containerPort: 9400
        securityContext:
          runAsNonRoot: false
          runAsUser: 0
          capabilities:
            add:
            - SYS_ADMIN
            # - CAP_SETFCAP
        volumeMounts:
        - name: pod-gpu-resources
          readOnly: true
          mountPath: /var/lib/kubelet/pod-resources
      volumes:
      - name: pod-gpu-resources
        hostPath:
          path: /var/lib/kubelet/pod-resources
{% if accu_accelerator_node_taint | bool %}
      tolerations:
      - key: accuinsight.io/accelerator
        effect: NoSchedule
        operator: Exists
{% endif %} 

---
kind: Service
apiVersion: v1
metadata:
  name: accu-nvidia-device-metric
  namespace: {{ accu_accelerator_namespace }}
  labels:
    release: {{ accu_monitoring_release }}
    accuinsight.io/accelerator: dcgm-exporter
spec:
  selector:
    accuinsight.io/accelerator: dcgm-exporter
  ports:
  - name: metrics
    port: 9400

{% if accu_monitoring_enabled | bool %}
---
apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: accu-nvidia-device-metric
  namespace: {{ accu_monitoring_namespace }}
  labels:
    release: {{ accu_monitoring_release }}
    accuinsight.io/accelerator: dcgm-exporter
spec:
  endpoints:
  - port: metrics
    path: /metrics
  namespaceSelector:
    matchNames:
    - {{ accu_accelerator_namespace }}
  selector:
    matchLabels:
      release: {{ accu_monitoring_release }}
      accuinsight.io/accelerator: dcgm-exporter
{% endif %}

